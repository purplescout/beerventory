<h1>Log in</h1>

<%= form_tag session_path do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Log in" %>

  or <%= link_to "register", new_user_path %>.

  <%= link_to "Forgot password", new_password_reset_path %>
<% end %>
